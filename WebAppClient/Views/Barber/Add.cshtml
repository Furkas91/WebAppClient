
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add Barber</h2>
<form method="post" action="/Barber/Put">
    <div class="form-group">
        <label for="FullName">FullName <small class="text-danger"> (requied)</small></label>
        <input type="text" name="FullName" class="form-control" id="FullName" aria-describedby="emailHelp" required>
        @* <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> *@
    </div>
    <div class="form-group">
        <label for="ProfessionalLevel">ProfessionalLevel <small class="text-danger"> (requied)</small></label>
        <input type="text" name="ProfessionalLevel" class="form-control" id="ProfessionalLevel" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>