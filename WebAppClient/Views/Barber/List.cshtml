@model IEnumerable<Barber>

@{
    ViewBag.Title = "Barbers";
    Layout = "_Layout";
}

<div class="d-flex flex-row justify-content-between mb-4">
  <span class="d-inline"><h2>Barber List</h2></span>
  @Html.ActionLink("Add barber", "Add", "Barber", "",new { @class="btn btn-primary", role="button"})
</div>


<div class="container">
    
    
   <table class="table table-hover">
     <thead>
       <tr>
         <th scope="col">#</th>
         <th scope="col">FullName</th>
         <th scope="col">Professional Level</th>
         
       </tr>
     </thead>
     <tbody>
        @foreach (var forecast in this.Model)
         {
          <tr>
            <th scope="row">@forecast.Id</th>
            <td>@forecast.FullName</td>
            <td>@forecast.ProfessionalLevel</td>
            
          </tr>
         }
     </tbody>
   </table>
</div>