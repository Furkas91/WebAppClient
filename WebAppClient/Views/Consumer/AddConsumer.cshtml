@model IEnumerable<Loyalty>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add Consumer</h2>
<form method="post" action="/Consumer/Put">
    <div class="form-group">
        <label for="FirstName">First name <small class="text-danger"> (requied)</small></label>
        <input type="text" name="FirstName" class="form-control" id="FirstName" aria-describedby="emailHelp" required>
        
    </div>
    <div class="form-group">
        <label for="LastName">Last name <small class="text-danger"> (requied)</small></label>
    <input type="text" name="LastName" class="form-control" id="LastName" required>
    </div>
    <div class="form-group">
        <label for="MiddleName">Middle name</label>
        <input type="text" name="MiddleName" class="form-control" id="MiddleName">
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Passport <small class="text-danger"> (requied)</small></label>
        <input type="text" name="PhoneNumber" class="form-control" id="PhoneNumber" required>
    </div>
    <div class="form-group">
            <label for="LoyaltySelect">Loyalty <small class="text-danger"> (requied)</small></label>
            <select class="form-control" id="LoyaltySelect" name="LoyaltyId" required>
                @foreach (var Loyalty in this.Model)
                {
                    <option value="@Loyalty.Id">@Loyalty.Level</option>
                }
            </select>
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
